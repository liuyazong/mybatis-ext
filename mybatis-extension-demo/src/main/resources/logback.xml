<configuration scan="true" scanPeriod="300 seconds" debug="false">

    <property name="log_path" value="."/>
    <property name="app" value="mybatis-extension"/>
    <property name="pattern"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS}|%boldBlue(%15.15thread)|%boldYellow(%5.5level)|%boldGreen(%-40.40logger{39})|%m%n"/>
    <contextName>${app}</contextName>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_path}/${app}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${app}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.ibatis" level="DEBUG"/>
    <logger name="com.zaxxer" level="INFO"/>
    <logger name="l.y.z" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>